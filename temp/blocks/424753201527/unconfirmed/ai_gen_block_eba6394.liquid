{% doc %}
  @prompt
    logos

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logos-container-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-logos-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-logos-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-logos-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.logo_spacing }}px;
    align-items: center;
    justify-items: center;
  }

  .ai-logos-item-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.logo_max_width }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.logo_padding }}px;
    border-radius: {{ block.settings.logo_border_radius }}px;
    background-color: {{ block.settings.logo_background }};
    transition: all 0.3s ease;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
  }

  .ai-logos-item-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: translateY(-2px);
    background-color: {{ block.settings.logo_hover_background }};
  }

  .ai-logos-item-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    max-height: {{ block.settings.logo_max_height }}px;
    object-fit: contain;
    filter: {% if block.settings.grayscale %}grayscale(100%){% else %}none{% endif %};
    transition: filter 0.3s ease;
  }

  .ai-logos-item-{{ ai_gen_id }}:hover img {
    filter: none;
  }

  .ai-logos-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.logo_max_height }}px;
    background-color: #f4f4f4;
    border: 2px dashed #cccccc;
    border-radius: {{ block.settings.logo_border_radius }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-logos-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #cccccc;
    margin-bottom: 8px;
  }

  .ai-logos-empty-text-{{ ai_gen_id }} {
    font-size: 12px;
    color: #999;
    text-align: center;
    padding: 0 10px;
  }

  @media screen and (max-width: 749px) {
    .ai-logos-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.logo_spacing | times: 0.75 }}px;
    }

    .ai-logos-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-logos-item-{{ ai_gen_id }} {
      padding: {{ block.settings.logo_padding | times: 0.75 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-logos-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }
{% endstyle %}

<div class="ai-logos-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logos-wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-logos-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-logos-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% assign logo_key = 'logo_' | append: i %}
        {% assign logo_url_key = 'logo_url_' | append: i %}
        {% assign logo = block.settings[logo_key] %}
        {% assign logo_url = block.settings[logo_url_key] %}

        {% if logo != blank %}
          <div class="ai-logos-item-{{ ai_gen_id }}">
            {% if logo_url != blank %}<a href="{{ logo_url }}" target="_blank" rel="noopener">
                <img
                  src="{{ logo | image_url: width: 400 }}"
                  alt="{{ logo.alt | escape }}"
                  loading="lazy"
                  width="{{ logo.width }}"
                  height="{{ logo.height }}"
                >
              </a>
            {% else %}
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ logo.width }}"
                height="{{ logo.height }}"
              >
            {% endif %}
          </div>
        {% elsif forloop.index <= 6 %}
          <div class="ai-logos-item-{{ ai_gen_id }}">
            <div class="ai-logos-placeholder-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <div class="ai-logos-empty-text-{{ ai_gen_id }}">
                Add logo {{ forloop.index }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

