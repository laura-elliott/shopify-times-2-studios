{% doc %}
  @prompt
    add a section where i can add 2 logos, dont show blank sections if logos haven't been added

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign logo_1 = block.settings.logo_1
  assign logo_2 = block.settings.logo_2
  assign has_logos = false
  
  if logo_1 or logo_2
    assign has_logos = true
  endif
%}

{% if has_logos %}
  {% style %}
    .ai-logo-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding }}px 0;
      background-color: {{ block.settings.background_color }};
    }

    .ai-logo-section__container-{{ ai_gen_id }} {
      max-width: {{ block.settings.container_width }}px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .ai-logo-section__content-{{ ai_gen_id }} {
      display: flex;
      align-items: {{ block.settings.vertical_alignment }};
      justify-content: {{ block.settings.horizontal_alignment }};
      gap: {{ block.settings.logo_spacing }}px;
      flex-wrap: wrap;
    }

    .ai-logo-section__logo-{{ ai_gen_id }} {
      flex-shrink: 0;
    }

    .ai-logo-section__logo-image-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width }}px;
      height: auto;
      max-width: 100%;
      transition: opacity 0.3s ease;
    }

    .ai-logo-section__logo-image-{{ ai_gen_id }}:hover {
      opacity: {{ block.settings.hover_opacity | divided_by: 100.0 }};
    }

    @media screen and (max-width: 749px) {
      .ai-logo-section__content-{{ ai_gen_id }} {
        gap: {{ block.settings.logo_spacing | times: 0.7 }}px;
      }

      .ai-logo-section__logo-image-{{ ai_gen_id }} {
        width: {{ block.settings.logo_width | times: 0.8 }}px;
      }
    }
  {% endstyle %}

  <div class="ai-logo-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-logo-section__container-{{ ai_gen_id }}">
      <div class="ai-logo-section__content-{{ ai_gen_id }}">
        {% for i in (1..2) %}
          {% liquid
            assign logo_key = 'logo_' | append: i
            assign logo_link_key = 'logo_' | append: i | append: '_link'
            assign logo = block.settings[logo_key]
            assign logo_link = block.settings[logo_link_key]
          %}

          {% if logo %}
            <div class="ai-logo-section__logo-{{ ai_gen_id }}">
              {% if logo_link != blank %}
                <a href="{{ logo_link }}" target="_blank" rel="noopener">
              {% endif %}

              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                class="ai-logo-section__logo-image-{{ ai_gen_id }}"
                width="{{ block.settings.logo_width }}"
                height="auto"
                loading="lazy"
              >

              {% if logo_link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

